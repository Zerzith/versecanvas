rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // Helper Functions
    // ============================================
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isSignedIn() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // ============================================
    // Users Collection
    // ============================================
    match /users/{userId} {
      allow read: if true; // ทุกคนอ่านได้
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (isOwner(userId) || isAdmin());
      allow delete: if isOwner(userId) || isAdmin();
    }
    
    // ============================================
    // Artworks Collection
    // ============================================
    match /artworks/{artworkId} {
      allow read: if true; // ทุกคนอ่านได้
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (
        resource.data.artistId == request.auth.uid ||
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
      allow delete: if isSignedIn() && (
        resource.data.artistId == request.auth.uid ||
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
    }
    
    // ============================================
    // Products Collection
    // ============================================
    match /products/{productId} {
      allow read: if true; // ทุกคนอ่านได้
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (
        resource.data.sellerId == request.auth.uid ||
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
      allow delete: if isSignedIn() && (
        resource.data.sellerId == request.auth.uid ||
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
    }
    
    // ============================================
    // Stories Collection
    // ============================================
    match /stories/{storyId} {
      allow read: if true; // ทุกคนอ่านได้
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        resource.data.authorId == request.auth.uid ||
        isAdmin()
      );
      allow delete: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        resource.data.authorId == request.auth.uid ||
        isAdmin()
      );
      
      // Chapters Subcollection
      match /chapters/{chapterId} {
        allow read: if true; // ทุกคนอ่านได้
        allow create: if isSignedIn();
        allow update: if isSignedIn() || isAdmin();
        allow delete: if isSignedIn() || isAdmin(); // แอดมินสามารถลบ chapter ได้
      }
    }
    
    // ============================================
    // Jobs Collection (Commission / Art Requests)
    // ============================================
    match /jobs/{jobId} {
      allow read: if true; // ทุกคนอ่านได้
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
      allow delete: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
    }
    
    // ============================================
    // Work Submissions
    // ============================================
    match /workSubmissions/{submissionId} {
      allow read: if isSignedIn(); // ผู้ที่ล็อกอินอ่านได้
      allow create: if isSignedIn();
      allow update: if isSignedIn() || isAdmin();
      allow delete: if isSignedIn() || isAdmin();
    }
    
    // ============================================
    // Orders Collection
    // ============================================
    match /orders/{orderId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (
        resource.data.buyerId == request.auth.uid ||
        resource.data.sellerId == request.auth.uid ||
        isAdmin()
      );
      allow delete: if isAdmin(); // เฉพาะแอดมินลบได้
    }
    
    // ============================================
    // Transactions Collection
    // ============================================
    match /transactions/{transactionId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
      allow delete: if isAdmin(); // เฉพาะแอดมินลบได้
    }
    
    // ============================================
    // Payments Collection
    // ============================================
    match /payments/{paymentId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() || isAdmin();
      allow delete: if isAdmin(); // เฉพาะแอดมินลบได้
    }
    
    // ============================================
    // Escrow Collection (สำหรับระบบ Escrow)
    // ============================================
    match /escrow/{escrowId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() || isAdmin();
      allow delete: if isAdmin(); // เฉพาะแอดมินลบได้
    }
    
    // ============================================
    // Withdrawals Collection
    // ============================================
    match /withdrawals/{withdrawalId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
      allow delete: if isAdmin(); // เฉพาะแอดมินลบได้
    }
    
    // ============================================
    // Notifications Collection
    // ============================================
    match /notifications/{notificationId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
      allow delete: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
    }
    
    // ============================================
    // Bookmarks Collection
    // ============================================
    match /bookmarks/{bookmarkId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
      allow delete: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
    }
    
    // ============================================
    // Follows Collection
    // ============================================
    match /follows/{followId} {
      allow read: if true; // ทุกคนอ่านได้
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (
        resource.data.followerId == request.auth.uid ||
        isAdmin()
      );
      allow delete: if isSignedIn() && (
        resource.data.followerId == request.auth.uid ||
        isAdmin()
      );
    }
    
    // ============================================
    // Settings Collection
    // ============================================
    match /settings/{userId} {
      allow read: if isSignedIn() && (isOwner(userId) || isAdmin());
      allow write: if isSignedIn() && (isOwner(userId) || isAdmin());
    }
    
    // ============================================
    // Likes Collection
    // ============================================
    match /likes/{likeId} {
      allow read: if true; // ทุกคนอ่านได้
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
      allow delete: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
    }
    
    // ============================================
    // Comments Collection
    // ============================================
    match /comments/{commentId} {
      allow read: if true; // ทุกคนอ่านได้
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
      allow delete: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
    }
    
    // ============================================
    // Reports Collection
    // ============================================
    match /reports/{reportId} {
      allow read: if isSignedIn() || isAdmin();
      allow create: if isSignedIn();
      allow update: if isAdmin(); // เฉพาะแอดมินแก้ไขได้
      allow delete: if isAdmin(); // เฉพาะแอดมินลบได้
    }
    
    // ============================================
    // Reviews Collection
    // ============================================
    match /reviews/{reviewId} {
      allow read: if true; // ทุกคนอ่านได้
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
      allow delete: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
    }
    
    // ============================================
    // Art Requests Collection
    // ============================================
    match /artRequests/{requestId} {
      allow read: if true; // ทุกคนอ่านได้
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
      allow delete: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
    }
    
    // ============================================
    // Conversations Collection (ระบบแชท)
    // ============================================
    match /conversations/{conversationId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() || isAdmin();
      allow delete: if isAdmin(); // เฉพาะแอดมินลบได้
      
      // Messages Subcollection
      match /messages/{messageId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn();
        allow update: if isSignedIn() && (
          resource.data.senderId == request.auth.uid ||
          isAdmin()
        );
        allow delete: if isSignedIn() && (
          resource.data.senderId == request.auth.uid ||
          isAdmin()
        );
      }
    }
    
    // ============================================
    // Chapter Purchases Collection
    // ============================================
    match /chapterPurchases/{purchaseId} {
      // อ่านได้เฉพาะของตัวเองหรือ admin
      allow read: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
      // สร้างได้เมื่อล็อกอินและเป็นการซื้อของตัวเอง
      allow create: if isSignedIn() && 
        request.resource.data.userId == request.auth.uid;
      // แอดมินสามารถแก้ไขและลบได้
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // ============================================
    // Credits Collection (ระบบเครดิต)
    // ============================================
    match /credits/{userId} {
      allow read: if isSignedIn() && (isOwner(userId) || isAdmin());
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (isOwner(userId) || isAdmin());
      allow delete: if isAdmin(); // เฉพาะแอดมินลบได้
    }
  }
}
