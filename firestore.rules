rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // Helper Functions
    // ============================================
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isSignedIn() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // ============================================
    // Users Collection
    // ============================================
    match /users/{userId} {
      allow read: if true; // ทุกคนอ่านได้
      allow create: if isSignedIn();
      // ปรับปรุง: อนุญาตให้อัปเดต credits ได้ถ้าล็อกอิน (สำหรับการโอนเครดิต)
      // หรืออัปเดตข้อมูลอื่นถ้าเป็นเจ้าของหรือ admin
      allow update: if isSignedIn() && (
        isOwner(userId) || 
        isAdmin() || 
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['credits']))
      );
      allow delete: if isOwner(userId) || isAdmin();
    }
    
    // ============================================
    // Artworks Collection
    // ============================================
    match /artworks/{artworkId} {
      allow read: if true; // ทุกคนอ่านได้
      allow create: if isSignedIn();
      allow update: if isSignedIn() || isAdmin();
      allow delete: if isSignedIn() && (
        resource.data.artistId == request.auth.uid ||
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
    }
    
    // ============================================
    // Products Collection
    // ============================================
    match /products/{productId} {
      allow read: if true; // ทุกคนอ่านได้
      allow create: if isSignedIn();
      allow update: if isSignedIn() || isAdmin();
      allow delete: if isSignedIn() && (
        resource.data.sellerId == request.auth.uid ||
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
    }
    
    // ============================================
    // Stories Collection
    // ============================================
    match /stories/{storyId} {
      allow read: if true; // ทุกคนอ่านได้
      allow create: if isSignedIn();
      allow update: if isSignedIn() || isAdmin();
      allow delete: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        resource.data.authorId == request.auth.uid ||
        isAdmin()
      );
      
      match /chapters/{chapterId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow update: if isSignedIn() || isAdmin();
        allow delete: if isSignedIn() || isAdmin();
      }
    }
    
    // ============================================
    // Jobs Collection
    // ============================================
    match /jobs/{jobId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
    }
    
    // ============================================
    // Job Applicants Collection
    // ============================================
    match /jobApplicants/{applicantId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isSignedIn() || isAdmin();
    }
    
    // ============================================
    // Work Submissions
    // ============================================
    match /workSubmissions/{submissionId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() || isAdmin();
      allow delete: if isSignedIn() || isAdmin();
    }
    
    // ============================================
    // Orders Collection
    // ============================================
    match /orders/{orderId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (
        resource.data.buyerId == request.auth.uid ||
        resource.data.sellerId == request.auth.uid ||
        isAdmin()
      );
      allow delete: if isAdmin();
    }
    
    // ============================================
    // Transactions Collection
    // ============================================
    match /transactions/{transactionId} {
      allow read: if isSignedIn();
      // ปรับปรุง: อนุญาตให้สร้าง transaction ได้ถ้าล็อกอิน (สำหรับการโอน/รับเครดิต)
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
      allow delete: if isAdmin();
    }
    
    // ============================================
    // Payments Collection
    // ============================================
    match /payments/{paymentId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() || isAdmin();
      allow delete: if isAdmin();
    }
    
    // ============================================
    // Escrow Collection
    // ============================================
    match /escrow/{escrowId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() || isAdmin();
      allow delete: if isAdmin();
    }
    
    // ============================================
    // Withdrawals Collection
    // ============================================
    match /withdrawals/{withdrawalId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
      allow delete: if isAdmin();
    }
    
    // ============================================
    // Notifications Collection
    // ============================================
    match /notifications/{notificationId} {
      allow read: if isSignedIn();
      // ปรับปรุง: อนุญาตให้ทุกคนที่ล็อกอินสร้างการแจ้งเตือนได้ (เช่น เมื่อโอนเครดิตให้ผู้อื่น)
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
      allow delete: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
    }
    
    // ============================================
    // Bookmarks Collection
    // ============================================
    match /bookmarks/{bookmarkId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
      allow delete: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
    }
    
    // ============================================
    // Follows Collection
    // ============================================
    match /follows/{followId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (
        resource.data.followerId == request.auth.uid ||
        isAdmin()
      );
      allow delete: if isSignedIn() && (
        resource.data.followerId == request.auth.uid ||
        isAdmin()
      );
    }
    
    // ============================================
    // Settings Collection
    // ============================================
    match /settings/{userId} {
      allow read: if isSignedIn() && (isOwner(userId) || isAdmin());
      allow write: if isSignedIn() && (isOwner(userId) || isAdmin());
    }
    
    // ============================================
    // Likes Collection
    // ============================================
    match /likes/{likeId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
      allow delete: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
    }
    
    // ============================================
    // Comments Collection
    // ============================================
    match /comments/{commentId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
      allow delete: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
    }
    
    // ============================================
    // Reports Collection
    // ============================================
    match /reports/{reportId} {
      allow read: if isSignedIn() || isAdmin();
      allow create: if isSignedIn();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // ============================================
    // Reviews Collection
    // ============================================
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
      allow delete: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
    }
    
    // ============================================
    // Art Requests Collection
    // ============================================
    match /artRequests/{requestId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
      allow delete: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
    }
    
    // ============================================
    // Conversations Collection
    // ============================================
    match /conversations/{conversationId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() || isAdmin();
      allow delete: if isAdmin();
      
      match /messages/{messageId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn();
        allow update: if isSignedIn() && (
          resource.data.senderId == request.auth.uid ||
          isAdmin()
        );
        allow delete: if isSignedIn() && (
          resource.data.senderId == request.auth.uid ||
          isAdmin()
        );
      }
    }
    
    // ============================================
    // Chapter Purchases Collection
    // ============================================
    match /chapterPurchases/{purchaseId} {
      allow read: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
      allow create: if isSignedIn() && 
        request.resource.data.userId == request.auth.uid;
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // ============================================
    // Credits Collection
    // ============================================
    match /credits/{userId} {
      allow read: if isSignedIn() && (isOwner(userId) || isAdmin());
      allow create: if isSignedIn();
      // ปรับปรุง: อนุญาตให้อัปเดตเครดิตได้สำหรับการโอน
      allow update: if isSignedIn() && (
        isOwner(userId) || 
        isAdmin() ||
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['credits']))
      );
      allow delete: if isAdmin();
    }
  }
}
